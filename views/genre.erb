<div class="title">
  <h1><%= @genre %> MadLibs Story Themes</h1>
</div>

<div class="<%= @genre %>_themes_main_container">
  <% @sub_genres.each do |sub_genre| %>
    <div class="theme_button">
      <form action="/<%= @genre %>/<%= sub_genre %>/empty_story" method="get">
        <label for="<%= sub_genre %>_button"></label>

        <div class="btn">
          <input id="<%= sub_genre %>_button" type="submit" value="<%= sub_genre %>" class="btn btn-success">
        </div>
      </form>
    </div>
  <% end %>
</div>
